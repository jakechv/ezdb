{
  "extends": "airbnb",
  "plugins": ["spellcheck"],
  "rules": {
    "spellcheck/spell-checker": [
      1,
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "en_US",
        "skipWords": ["dict", "aff", "hunspellchecker", "hunspell", "utils"],
        "skipIfMatch": [
          "http://[^s]*",
          "^[-\\w]+/[-\\w\\.]+$" //For MIME Types
        ],
        "skipWordIfMatch": ["^foobar.*$", "*arg*"],
        "minLength": 3
      }
    ]
  }
}
